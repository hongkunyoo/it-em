<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/brand_color</item>
        <item name="colorPrimaryDark">@color/brand_color_dark</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <style name="DarkActionBarAppTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
    
    <style name="LightActionBarAppTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>
    
</resources>