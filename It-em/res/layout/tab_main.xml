<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.pinthecloud.item"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/tab_main_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/image" />

    <com.pinthecloud.item.view.ItTextView
        android:id="@+id/tab_main_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tab_main_image"
        android:layout_alignRight="@+id/tab_main_image"
        android:layout_alignTop="@+id/tab_main_image"
        android:layout_marginEnd="@dimen/main_tab_margin"
        android:layout_marginRight="@dimen/main_tab_margin"
        android:layout_marginTop="@dimen/main_tab_margin"
        android:background="@drawable/bepro_mail_bg"
        android:gravity="center"
        android:textColor="@color/accent_color"
        android:textStyle="bold"
        android:visibility="gone"
        app:textType="caption" />

</RelativeLayout>