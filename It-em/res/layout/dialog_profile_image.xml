<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.pinthecloud.item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dialog_margin" >

    <ImageButton
        android:id="@+id/profile_image_frag_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/delete"
        android:src="@drawable/general_dialog_close_ic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <com.pinthecloud.item.view.ItTextView
            android:id="@+id/profile_image_frag_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/key_line_first"
            android:textStyle="bold"
            app:textType="subhead" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/profile_image_frag_profile_image"
            android:layout_width="@dimen/profile_image_width"
            android:layout_height="@dimen/profile_image_width"
            app:riv_corner_radius="@dimen/corner_radius" />
    </LinearLayout>

</RelativeLayout>