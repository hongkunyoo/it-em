<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/content_margin"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/row_hot_item_list_profile_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_item_profile_height"
        android:paddingEnd="@dimen/content_margin"
        android:paddingLeft="@dimen/content_margin"
        android:paddingRight="@dimen/content_margin"
        android:paddingStart="@dimen/content_margin" >

        <TextView
            android:id="@+id/row_hot_item_list_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/row_hot_item_list_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/row_hot_item_list_rank"
            android:layout_toRightOf="@+id/row_hot_item_list_rank" />

        <com.pinthecloud.item.view.CircleImageView
            xmlns:civ="http://schemas.android.com/apk/res-auto"
            android:id="@+id/row_hot_item_list_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            civ:border_color="@color/line_color"
            civ:border_width="@dimen/line_width" />
    </RelativeLayout>

    <com.pinthecloud.item.view.SquareImageView
        android:id="@+id/row_hot_item_list_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/content_margin" >

        <TextView
            android:id="@+id/row_hot_item_list_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/home_item_content_margin" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/row_hot_item_list_it_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/row_hot_item_list_it_number_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/home_item_reply_margin"
                android:layout_marginStart="@dimen/home_item_reply_margin"
                android:layout_toEndOf="@+id/row_hot_item_list_it_button"
                android:layout_toRightOf="@+id/row_hot_item_list_it_button"
                android:text="@string/plus" />

            <TextView
                android:id="@+id/row_hot_item_list_it_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/row_hot_item_list_it_number_plus"
                android:layout_toRightOf="@+id/row_hot_item_list_it_number_plus" />

            <Button
                android:id="@+id/row_hot_item_list_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>