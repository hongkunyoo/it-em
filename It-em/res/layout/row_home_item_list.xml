<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.pinthecloud.item"
    android:id="@+id/row_home_item_list_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/row_home_item_list_profile_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_item_profile_height"
        android:paddingEnd="@dimen/content_margin"
        android:paddingLeft="@dimen/none"
        android:paddingRight="@dimen/content_margin"
        android:paddingStart="@dimen/none" >

        <com.pinthecloud.item.view.CircleImageView
            android:id="@+id/row_home_item_list_profile_image"
            android:layout_width="@dimen/home_item_profile_image_width"
            android:layout_height="@dimen/home_item_profile_image_width"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/content_margin"
            android:layout_marginStart="@dimen/content_margin"
            app:border_color="@color/line_color"
            app:border_width="@dimen/line_width" />

        <com.pinthecloud.item.view.CustomTextView
            android:id="@+id/row_home_item_list_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/toolbar_title_margin"
            android:layout_marginStart="@dimen/toolbar_title_margin"
            android:textColor="@color/brand_text_color"
            app:textType="subhead" />

        <Button
            android:id="@+id/row_home_item_list_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <include layout="@layout/custom_line" />

    <com.pinthecloud.item.view.SquareImageView
        android:id="@+id/row_home_item_list_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <include layout="@layout/custom_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/content_margin" >

        <com.pinthecloud.item.view.CustomTextView
            android:id="@+id/row_home_item_list_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/home_item_content_margin"
            android:textColor="@color/brand_text_color"
            app:textType="body" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/row_home_item_list_it_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/it_lower"
                android:src="@drawable/home_item_list_it_button" />

            <com.pinthecloud.item.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/home_item_content_margin"
                android:layout_marginStart="@dimen/home_item_content_margin"
                android:text="@string/plus"
                android:textColor="@color/brand_text_color_light"
                app:textType="caption" />

            <com.pinthecloud.item.view.CustomTextView
                android:id="@+id/row_home_item_list_it_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/brand_text_color_light"
                app:textType="caption" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/custom_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_item_information_height"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/row_home_item_list_reply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <com.pinthecloud.item.view.CustomTextView
                android:id="@+id/row_home_item_list_reply_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textColor="@color/brand_text_color_light"
                app:textType="caption" />

            <com.pinthecloud.item.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/space"
                android:textColor="@color/brand_text_color_light"
                app:textType="caption" />

            <com.pinthecloud.item.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comments"
                android:textColor="@color/brand_text_color_light"
                app:textType="caption" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_home_item_list_product_tag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <com.pinthecloud.item.view.CustomTextView
                android:id="@+id/row_home_item_list_product_tag_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textColor="@color/brand_text_color_light"
                app:textType="caption" />

            <com.pinthecloud.item.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/space"
                android:textColor="@color/brand_text_color_light"
                app:textType="caption" />

            <com.pinthecloud.item.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tags"
                android:textColor="@color/brand_text_color_light"
                app:textType="caption" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>