<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/reply_row_height"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/content_margin"
        android:paddingLeft="@dimen/content_margin"
        android:paddingRight="@dimen/content_margin"
        android:paddingStart="@dimen/content_margin" >

        <com.pinthecloud.item.view.CircleImageView
            xmlns:civ="http://schemas.android.com/apk/res-auto"
            android:id="@+id/row_reply_list_profile_image"
            android:layout_width="@dimen/home_item_profile_image_width"
            android:layout_height="@dimen/home_item_profile_image_width"
            civ:border_color="@color/line_color"
            civ:border_width="@dimen/line_width" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/reply_nick_name_margin"
            android:layout_marginStart="@dimen/reply_nick_name_margin"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/row_reply_list_nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/it_user_page_tab_title"
                    android:textSize="@dimen/font_medium" />

                <TextView
                    android:id="@+id/row_reply_list_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/it_user_page_tab_number"
                    android:textSize="@dimen/font_small" />
            </RelativeLayout>

            <TextView
                android:id="@+id/row_reply_list_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reply_nick_name_margin"
                android:textColor="@color/it_user_page_tab_title"
                android:textSize="@dimen/font_small" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/row_reply_list_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:layout_alignParentBottom="true"
        layout="@layout/custom_line" />

</RelativeLayout>