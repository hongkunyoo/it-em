<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/reply_row_height"
    android:gravity="center_vertical"
    android:paddingEnd="@dimen/content_margin"
    android:paddingLeft="@dimen/content_margin"
    android:paddingRight="@dimen/content_margin"
    android:paddingStart="@dimen/content_margin" >

    <com.pinthecloud.item.view.CircleImageView
        xmlns:civ="http://schemas.android.com/apk/res-auto"
        android:id="@+id/row_reply_list_profile_image"
        android:layout_width="@dimen/home_item_profile_image_width"
        android:layout_height="@dimen/home_item_profile_image_width"
        civ:border_color="@color/line_color"
        civ:border_width="@dimen/line_width" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/toolbar_title_margin"
        android:layout_marginStart="@dimen/toolbar_title_margin"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/row_reply_list_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/brand_text_color" />

            <TextView
                android:id="@+id/row_reply_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/brand_text_color_light" />
        </RelativeLayout>

        <TextView
            android:id="@+id/row_reply_list_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_item_content_margin"
            android:textColor="@color/brand_text_color" />
    </LinearLayout>

</RelativeLayout>