<?xml version="1.0" encoding="utf-8"?>
<com.pinthecloud.item.view.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_color"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.pinthecloud.item.view.SquareImageView
            android:id="@+id/item_frag_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@android:color/white"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/content_margin"
            android:background="@android:color/white" >

            <View
                android:id="@+id/item_frag_image_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width"
                android:background="@color/line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_frag_image_divider"
                android:padding="@dimen/content_margin" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/item_frag_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/it_user_page_tab_title"
                        android:textSize="@dimen/font_large" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/item_content_margin" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/upload_date"
                            android:textColor="@color/it_user_page_tab_number"
                            android:textSize="@dimen/font_small" />

                        <TextView
                            android:id="@+id/item_frag_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/it_user_page_tab_number"
                            android:textSize="@dimen/font_small" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/item_it_number_margin" >

                        <TextView
                            android:id="@+id/item_frag_it_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/it_user_page_tab_number"
                            android:textSize="@dimen/font_medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/it_number"
                            android:textColor="@color/it_user_page_tab_number"
                            android:textSize="@dimen/font_medium" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/item_frag_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
        </RelativeLayout>

        <fragment
            android:id="@+id/item_frag_reply_frag"
            android:name="com.pinthecloud.item.fragment.ReplyFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/content_margin"
            tools:layout="@layout/fragment_reply" />

        <LinearLayout
            android:id="@+id/item_frag_profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/content_margin"
            android:paddingEnd="@dimen/content_margin"
            android:paddingLeft="@dimen/content_margin"
            android:paddingRight="@dimen/content_margin"
            android:paddingStart="@dimen/content_margin" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_profile_text_height"
                android:gravity="center_vertical"
                android:text="@string/upload_by"
                android:textColor="@color/it_user_page_tab_number"
                android:textSize="@dimen/font_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <com.pinthecloud.item.view.CircleImageView
                    xmlns:civ="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/item_frag_profile_image"
                    android:layout_width="@dimen/item_profile_image_width"
                    android:layout_height="@dimen/item_profile_image_width"
                    android:layout_marginTop="@dimen/item_profile_image_top_margin"
                    civ:border_color="@color/line_color"
                    civ:border_width="@dimen/line_width" />

                <TextView
                    android:id="@+id/item_frag_nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/content_margin"
                    android:layout_marginStart="@dimen/content_margin"
                    android:textColor="@color/it_user_page_tab_title"
                    android:textSize="@dimen/font_large" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</com.pinthecloud.item.view.ParallaxScrollView>