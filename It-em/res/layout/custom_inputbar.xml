<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <include layout="@layout/custom_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/custom_inputbar_margin"
        android:paddingEnd="@dimen/none"
        android:paddingLeft="@dimen/custom_inputbar_margin"
        android:paddingRight="@dimen/none"
        android:paddingStart="@dimen/custom_inputbar_margin"
        android:paddingTop="@dimen/custom_inputbar_margin" >

        <EditText
            android:id="@+id/custom_inputbar_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/general_inputbar_bg"
            android:ems="10"
            android:hint="@string/message"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:paddingEnd="@dimen/custom_inputbar_margin"
            android:paddingLeft="@dimen/custom_inputbar_margin"
            android:paddingRight="@dimen/custom_inputbar_margin"
            android:paddingStart="@dimen/custom_inputbar_margin"
            android:textColor="@color/brand_text_color"
            android:textColorHint="@color/custom_inputbar_hint"
            android:textSize="@dimen/font_large" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/custom_inputbar_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:text="@string/submit"
            android:textColor="@color/custom_inputbar_submit_color"
            android:textSize="@dimen/font_medium" />
    </LinearLayout>

</LinearLayout>