<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.pinthecloud.item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/reply_title_margin" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/reply_title_margin"
            android:layout_marginRight="@dimen/reply_title_margin"
            android:contentDescription="@string/reply_lower"
            android:src="@drawable/detail_comment_ic" />

        <com.pinthecloud.item.view.CustomTextView
            android:id="@+id/reply_frag_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            app:textType="subhead" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include
            android:id="@+id/reply_frag_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            layout="@layout/custom_progress_bar"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/reply_frag_list_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <com.pinthecloud.item.view.CustomTextView
                    android:id="@+id/reply_frag_list_empty_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/first_reply"
                    android:visibility="gone"
                    app:textType="body" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/reply_frag_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/reply_margin"
                android:paddingEnd="@dimen/none"
                android:paddingLeft="@dimen/reply_margin"
                android:paddingRight="@dimen/none"
                android:paddingStart="@dimen/reply_margin" >

                <EditText
                    android:id="@+id/reply_frag_inputbar_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/general_inputbar_bg"
                    android:ems="10"
                    android:hint="@string/message"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:paddingEnd="@dimen/reply_margin"
                    android:paddingLeft="@dimen/reply_margin"
                    android:paddingRight="@dimen/reply_margin"
                    android:paddingStart="@dimen/reply_margin"
                    android:textColor="@color/brand_text_color"
                    android:textColorHint="@color/reply_input_hint"
                    android:textSize="@dimen/font_large" >

                    <requestFocus />
                </EditText>

                <Button
                    android:id="@+id/reply_frag_inputbar_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@android:color/transparent"
                    android:enabled="false"
                    android:text="@string/submit"
                    android:textColor="@color/reply_submit_color"
                    android:textSize="@dimen/font_medium" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>