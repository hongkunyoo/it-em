<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.pinthecloud.item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/key_line_first" >

            <com.pinthecloud.item.view.CustomTextView
                android:id="@+id/reply_frag_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                app:textType="subhead" />
        </LinearLayout>

        <include
            android:id="@+id/reply_frag_titlebar_divider"
            layout="@layout/custom_line" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include
            android:id="@+id/reply_frag_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            layout="@layout/custom_progress_bar"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/reply_frag_list_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <LinearLayout
                    android:id="@+id/reply_frag_list_empty_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/reply_row_height"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingEnd="@dimen/key_line_first"
                    android:paddingLeft="@dimen/key_line_first"
                    android:paddingRight="@dimen/key_line_first"
                    android:paddingStart="@dimen/key_line_first"
                    android:visibility="gone" >

                    <com.pinthecloud.item.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/first_reply"
                        app:textType="body" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/reply_frag_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <include layout="@layout/custom_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/key_line_first"
                    android:paddingLeft="@dimen/none"
                    android:paddingRight="@dimen/key_line_first"
                    android:paddingStart="@dimen/none" >

                    <EditText
                        android:id="@+id/reply_frag_inputbar_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/message"
                        android:inputType="textMultiLine"
                        android:lineSpacingExtra="@dimen/font_xx_large"
                        android:lineSpacingMultiplier="0"
                        android:maxLines="4"
                        android:paddingEnd="@dimen/key_line_first"
                        android:paddingLeft="@dimen/key_line_first"
                        android:paddingRight="@dimen/key_line_first"
                        android:paddingStart="@dimen/key_line_first"
                        android:textColor="@color/brand_text_color"
                        android:textColorHint="@color/reply_input_hint"
                        android:textSize="@dimen/font_large" />

                    <Button
                        android:id="@+id/reply_frag_inputbar_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/reply_submit_bottom_margin"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:text="@string/submit"
                        android:textColor="@color/reply_submit_color"
                        android:textSize="@dimen/font_medium" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>