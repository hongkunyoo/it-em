<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tab_it_user_page_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/it_user_page_tab_title"
        android:textSize="@dimen/font_medium" />

    <TextView
        android:id="@+id/tab_it_user_page_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/it_user_page_tab_number_margin"
        android:layout_marginStart="@dimen/it_user_page_tab_number_margin"
        android:layout_toEndOf="@+id/tab_it_user_page_name"
        android:layout_toRightOf="@+id/tab_it_user_page_name"
        android:text="@string/zero"
        android:textColor="@color/it_user_page_tab_number"
        android:textSize="@dimen/font_medium" />

</RelativeLayout>