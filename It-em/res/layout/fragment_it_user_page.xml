<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.pinthecloud.item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize" >

    <ProgressBar
        android:id="@+id/it_user_page_frag_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/it_user_page_frag_container_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <android.support.v4.view.ViewPager
            android:id="@+id/it_user_page_frag_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/it_user_page_frag_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/it_user_page_frag_profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:padding="@dimen/key_line_first" >

                <com.pinthecloud.item.view.CircleImageView
                    android:id="@+id/it_user_page_frag_profile_image"
                    android:layout_width="@dimen/profile_settings_image_width"
                    android:layout_height="@dimen/profile_settings_image_width"
                    android:layout_marginEnd="@dimen/key_line_first"
                    android:layout_marginRight="@dimen/key_line_first"
                    app:border_color="@color/line_color"
                    app:border_width="@dimen/line_width" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/key_line_first"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/it_user_page_frag_pro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/it_user_page_content_margin"
                            android:layout_marginRight="@dimen/it_user_page_content_margin"
                            android:contentDescription="@string/pro"
                            android:src="@drawable/general_pro_ic"
                            android:visibility="gone" />

                        <com.pinthecloud.item.view.ItTextView
                            android:id="@+id/it_user_page_frag_nick_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/brand_text_color"
                            android:textStyle="bold"
                            app:textType="subhead" />
                    </LinearLayout>

                    <com.pinthecloud.item.view.ItTextView
                        android:id="@+id/it_user_page_frag_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/it_user_page_content_margin"
                        android:textColor="@color/gray_light"
                        app:textType="caption" />

                    <com.pinthecloud.item.view.ItTextView
                        android:id="@+id/it_user_page_frag_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/it_user_page_content_margin"
                        android:layout_marginTop="@dimen/it_user_page_content_margin"
                        android:textColor="@color/gray_light"
                        app:textType="caption" />

                    <Button
                        android:id="@+id/it_user_page_frag_profile_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/it_user_page_content_margin"
                        android:background="@drawable/it_user_page_profile_settings_button"
                        android:drawableEnd="@drawable/mypage_edit_ic"
                        android:drawableRight="@drawable/mypage_edit_ic"
                        android:minHeight="@dimen/none"
                        android:minWidth="@dimen/none"
                        android:paddingEnd="@dimen/none"
                        android:paddingLeft="@dimen/it_user_page_content_margin"
                        android:paddingRight="@dimen/none"
                        android:paddingStart="@dimen/it_user_page_content_margin"
                        android:text="@string/profile_settings"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/font_micro"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/custom_line" />

            <com.pinthecloud.item.view.PagerSlidingTabStrip
                xmlns:psts="http://schemas.android.com/apk/res-auto"
                android:id="@+id/it_user_page_frag_tab"
                android:layout_width="match_parent"
                android:layout_height="@dimen/it_user_page_tab_height"
                android:background="@android:color/white"
                psts:pstsDividerColor="@android:color/transparent"
                psts:pstsIndicatorColor="@color/accent_color"
                psts:pstsIndicatorHeight="@dimen/it_user_page_tab_indicator_height"
                psts:pstsShouldExpand="true"
                psts:pstsTabSwitch="true"
                psts:pstsUnderlineColor="@color/line_color"
                psts:pstsUnderlineHeight="@dimen/line_width" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>