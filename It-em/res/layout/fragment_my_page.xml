<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v4.view.ViewPager
        android:id="@+id/my_page_frag_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/my_page_frag_header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_page_header_height" >

        <RelativeLayout
            android:id="@+id/my_page_frag_profile_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/my_page_frag_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <com.pinthecloud.item.view.PagerSlidingTabStrip
            xmlns:psts="http://schemas.android.com/apk/res-auto"
            android:id="@+id/my_page_frag_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_tab_height"
            android:layout_alignBottom="@+id/my_page_frag_profile_layout"
            android:background="@color/brand_color"
            psts:pstsActivateTextColor="@android:color/white"
            psts:pstsIndicatorHeight="@dimen/none"
            psts:pstsShouldExpand="true"
            psts:pstsTabSwitch="true"
            psts:pstsTextAllCaps="false" />
    </RelativeLayout>

</RelativeLayout>