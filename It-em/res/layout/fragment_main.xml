<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.pinthecloud.item.view.PagerSlidingTabStrip
        xmlns:psts="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_frag_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_tab_height"
        android:background="@color/brand_color"
        psts:pstsDividerColor="@android:color/transparent"
        psts:pstsIndicatorColor="@color/accent_color"
        psts:pstsIndicatorHeight="@dimen/main_tab_indicator_height"
        psts:pstsShouldExpand="true"
        psts:pstsTabSwitch="true"
        psts:pstsUnderlineHeight="@dimen/none" />

    <com.pinthecloud.item.view.ParentViewPager
        android:id="@+id/main_frag_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>