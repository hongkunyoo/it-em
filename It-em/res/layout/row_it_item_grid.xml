<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/my_item_spacing"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/row_it_item_grid_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.pinthecloud.item.view.SquareImageView
        android:id="@+id/row_it_item_grid_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/row_it_item_grid_image" >

        <TextView
            android:id="@+id/row_it_item_grid_it_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/row_it_item_grid_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</RelativeLayout>