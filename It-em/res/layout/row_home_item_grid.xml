<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.pinthecloud.item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/home_item_content_margin"
    android:background="@drawable/home_item"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/home_item_margin"
        android:paddingLeft="@dimen/home_item_margin"
        android:paddingRight="@dimen/home_item_margin"
        android:paddingStart="@dimen/home_item_margin" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <com.pinthecloud.item.view.CircleImageView
                android:id="@+id/row_home_item_profile_image"
                android:layout_width="@dimen/profile_thumbnail_image_width"
                android:layout_height="@dimen/profile_thumbnail_image_width"
                app:border_color="@color/line_color"
                app:border_width="@dimen/line_width" />

            <com.pinthecloud.item.view.ItTextView
                android:id="@+id/row_home_item_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/home_item_margin"
                android:layout_marginStart="@dimen/home_item_margin"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/brand_text_color"
                android:textStyle="bold"
                app:textType="body" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/row_home_item_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/more"
            android:src="@drawable/feed_more_ic" />
    </LinearLayout>

    <include layout="@layout/custom_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.pinthecloud.item.view.DynamicHeightImageView
            android:id="@+id/row_home_item_item_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/row_home_item_unfold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/row_home_item_item_image"
            android:layout_alignEnd="@+id/row_home_item_item_image"
            android:layout_alignRight="@+id/row_home_item_item_image"
            android:contentDescription="@string/unfold"
            android:src="@drawable/feed_unfold_ic"
            android:visibility="gone" />
    </RelativeLayout>

    <include layout="@layout/custom_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/home_item_margin" >

        <com.pinthecloud.item.view.ItTextView
            android:id="@+id/row_home_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="@integer/home_item_content_max_line"
            android:textColor="@color/brand_text_color"
            app:textType="caption" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_item_content_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.pinthecloud.item.view.ItTextView
                android:id="@+id/row_home_item_it_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/home_item_content_margin"
                android:layout_marginRight="@dimen/home_item_content_margin"
                android:drawableLeft="@drawable/feed_it_ic"
                android:drawableStart="@drawable/feed_it_ic"
                android:gravity="center_vertical"
                android:textColor="@color/gray_light"
                app:textType="caption" />

            <com.pinthecloud.item.view.ItTextView
                android:id="@+id/row_home_item_reply_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/feed_comment_ic"
                android:drawableStart="@drawable/feed_comment_ic"
                android:gravity="center_vertical"
                android:textColor="@color/gray_light"
                app:textType="caption" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_item_content_margin" >

            <ImageButton
                android:id="@+id/row_home_item_it_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:contentDescription="@string/it"
                android:src="@drawable/home_item_it_button" />

            <ImageButton
                android:id="@+id/row_home_item_product_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:contentDescription="@string/product_tag"
                android:src="@drawable/feed_tag_ic" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>