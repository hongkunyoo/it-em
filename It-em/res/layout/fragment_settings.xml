<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.pinthecloud.item"
    android:id="@+id/settings_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="?attr/actionBarSize" >

    <RelativeLayout
        android:id="@+id/settings_profile_settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:background="@drawable/list_white_selector"
        android:clickable="true" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/key_line_first"
            android:layout_marginStart="@dimen/key_line_first"
            android:contentDescription="@string/profile_settings"
            android:src="@drawable/setting_profile_edit_ic" />

        <com.pinthecloud.item.view.ItTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/key_line_second"
            android:layout_marginStart="@dimen/key_line_second"
            android:text="@string/profile_settings"
            android:textColor="@color/brand_text_color"
            android:textStyle="bold"
            app:textType="body" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/key_line_first"
            android:layout_marginRight="@dimen/key_line_first"
            android:contentDescription="@string/profile_settings"
            android:src="@drawable/general_arrow_ic" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/settings_pro_settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:layout_marginBottom="@dimen/settings_layout_margin"
        android:background="@drawable/list_white_selector"
        android:clickable="true" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/key_line_first"
            android:layout_marginStart="@dimen/key_line_first"
            android:contentDescription="@string/be_pro"
            android:src="@drawable/setting_be_the_editor_ic" />

        <com.pinthecloud.item.view.ItTextView
            android:id="@+id/settings_pro_settings_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/key_line_second"
            android:layout_marginStart="@dimen/key_line_second"
            android:textColor="@color/brand_text_color"
            android:textStyle="bold"
            app:textType="body" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/key_line_first"
            android:layout_marginRight="@dimen/key_line_first"
            android:contentDescription="@string/profile_settings"
            android:src="@drawable/general_arrow_ic" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingEnd="@dimen/key_line_first"
        android:paddingLeft="@dimen/key_line_first"
        android:paddingRight="@dimen/key_line_first"
        android:paddingStart="@dimen/key_line_first" >

        <com.pinthecloud.item.view.ItTextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/settings_row_height"
            android:layout_marginBottom="@dimen/settings_content_margin"
            android:gravity="center_vertical"
            android:text="@string/notification"
            android:textColor="@color/gray_dark"
            app:textType="caption" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_row_height" >

            <com.pinthecloud.item.view.ItTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/notification_my_item"
                android:textColor="@color/brand_text_color"
                android:textStyle="bold"
                app:textType="body" />

            <ToggleButton
                android:id="@+id/settings_noti_my_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/noti_toggle_button"
                android:drawableRight="@drawable/noti_toggle_button"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_row_height" >

            <com.pinthecloud.item.view.ItTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/notification_it_item"
                android:textColor="@color/brand_text_color"
                android:textStyle="bold"
                app:textType="body" />

            <ToggleButton
                android:id="@+id/settings_noti_it_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/noti_toggle_button"
                android:drawableRight="@drawable/noti_toggle_button"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_row_height" >

            <com.pinthecloud.item.view.ItTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/notification_reply_item"
                android:textColor="@color/brand_text_color"
                android:textStyle="bold"
                app:textType="body" />

            <ToggleButton
                android:id="@+id/settings_noti_reply_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/noti_toggle_button"
                android:drawableRight="@drawable/noti_toggle_button"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>
    </LinearLayout>

    <com.pinthecloud.item.view.ItTextView
        android:id="@+id/settings_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/settings_row_height"
        android:layout_marginLeft="@dimen/key_line_first"
        android:layout_marginStart="@dimen/key_line_first"
        android:gravity="center_vertical"
        android:textColor="@color/gray_dark"
        app:textType="body" />

    <RelativeLayout
        android:id="@+id/settings_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:background="@color/red" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/key_line_first"
            android:layout_marginStart="@dimen/key_line_first"
            android:contentDescription="@string/logout"
            android:src="@drawable/setting_logout_ic" />

        <com.pinthecloud.item.view.ItTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/key_line_second"
            android:layout_marginStart="@dimen/key_line_second"
            android:text="@string/logout"
            android:textColor="@android:color/white"
            app:textType="body" />
    </RelativeLayout>

</LinearLayout>