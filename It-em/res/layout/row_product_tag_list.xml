<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.pinthecloud.item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/product_tag_content_margin"
    android:paddingTop="@dimen/product_tag_content_margin" >

    <com.pinthecloud.item.view.ItTextView
        android:id="@+id/row_product_tag_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/brand_text_color"
        android:textStyle="bold"
        app:textType="body" />

    <Button
        android:id="@+id/row_product_tag_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/product_tag_price_button"
        android:minHeight="@dimen/none"
        android:minWidth="@dimen/none"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_micro" />

</LinearLayout>